<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.ednevnik.ui.home.HomeFragment"
        android:label="Занятия"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_tasks"
        android:name="com.example.ednevnik.ui.tasks.TasksFragment"
        android:label="Домашние задания"
        tools:layout="@layout/fragment_tasks" />

    <fragment
        android:id="@+id/nav_navigation"
        android:name="com.example.ednevnik.ui.navigation.NavigationFragment"
        android:label="Навигация"
        tools:layout="@layout/fragment_navigation" />
    <fragment
        android:id="@+id/nav_addTask"
        android:name="com.example.ednevnik.ui.addTask.AddTaskFragment"
        android:label="Добавить ДЗ"
        tools:layout="@layout/fragment_add_task" />
    <fragment
        android:id="@+id/nav_addLesson"
        android:name="com.example.ednevnik.ui.addLesson.AddLessonFragment"
        android:label="Добавить урок"
        tools:layout="@layout/fragment_add_lesson" />
    <fragment
        android:id="@+id/nav_addUsersToGroup"
        android:name="com.example.ednevnik.ui.addUsersToGroup.AddUsersToGroupFragment"
        android:label="Добавить пользователей в группу"
        tools:layout="@layout/fragment_add_users_to_group" />
    <fragment
        android:id="@+id/nav_createGroup"
        android:name="com.example.ednevnik.ui.createGroup.CreateGroupFragment"
        android:label="Создать группу"
        tools:layout="@layout/fragment_create_group" />
    <fragment
        android:id="@+id/nav_quit"
        android:name="com.example.ednevnik.ui.quit.QuitFragment"
        android:label="Выйти"
        tools:layout="@layout/fragment_quit" />
</navigation>